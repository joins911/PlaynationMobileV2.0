<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content" >
  <TextView
    android:id="@+id/txtNotificationMsg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:text="Large Text"
    android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button
      android:id="@+id/btnNotDecline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txtNotificationMsg"
      android:layout_alignParentRight="true"
      android:text="@string/btnDecline" />
  
  <Button
    android:id="@+id/btnNotAccept"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtNotificationMsg"
    android:layout_toLeftOf="@id/btnNotDecline"
    android:text="@string/btnAccept" />


</RelativeLayout>